<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ln_forgotpwd_attop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_back"
            android:padding="@dimen/DP10"
            android:layout_marginLeft="@dimen/DP10"
            android:layout_marginTop="@dimen/DP10" />
        <!--

            <ScrollView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="none">
        -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/DP50">

            <RelativeLayout
                android:id="@+id/rel_forgotpwd_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DP12"
                android:layout_marginRight="@dimen/DP15"
                android:layout_marginTop="@dimen/DP10">

                <ImageView
                    android:id="@+id/backimage_in_forgotpwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="@dimen/DP5"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/forgotpwd_skipfornow_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:padding="@dimen/DP5"
                    android:text="Skip for Now"
                    android:drawableLeft="@drawable/skip_icon"
                    android:drawablePadding="@dimen/DP5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/SP14"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/signup_stryker_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP40"
                android:gravity="center_horizontal"
                android:src="@drawable/logo"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/forgotpwd_forgotpassword_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP10"
                android:gravity="center"
                android:text="FORGOT PASSWORD"
                android:textColor="@color/Signup"
                android:textSize="@dimen/SP18"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ln_forgotpwd_incenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/DP30">

                <TextView
                    android:id="@+id/forgotpwd_hint_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/DP50"
                    android:text="Please enter your Email Id"
                    android:textColor="@color/white1"
                    android:textSize="@dimen/DP18"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edt_email_forgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/email_box"
                    android:drawablePadding="@dimen/DP5"
                    android:gravity="center_vertical"
                    android:textCursorDrawable="@color/black"
                    android:backgroundTint="@color/black"
                    android:hint="Email/Mobile No."
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/DP4"
                    android:singleLine="true"
                    android:textColor="@color/Signup"
                    android:textColorHint="@color/txt"
                    android:textSize="@dimen/SP15" />

                <Button
                    android:id="@+id/forgotpwd_submit_bton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/sign_up"
                    android:gravity="center"
                    android:text="SUBMIT"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/DP25"
                    android:textColor="@color/white"
                    android:textSize="@dimen/SP20" />
            </LinearLayout>
        </LinearLayout>
        <!-- </ScrollView>-->

    </LinearLayout>
</ScrollView>