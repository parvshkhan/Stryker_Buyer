<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/DP5">

        <ImageView
            android:id="@+id/generalstore_custom_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/DP7"
            android:paddingTop="@dimen/DP10"
            android:src="@drawable/add2" />

        <LinearLayout
            android:id="@+id/ln_generalstore_customlistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DP8"
            android:layout_toRightOf="@+id/generalstore_custom_image"
            android:orientation="vertical"
            android:padding="@dimen/DP10">

            <LinearLayout
                android:id="@+id/ln_generalstore_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/generalstore_custom_storename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/DP5"
                    android:drawableRight="@drawable/line_up"
                    android:gravity="center_vertical"
                    android:text="Happy General Store"
                    android:textColor="@color/orange1"
                    android:textSize="@dimen/SP15" />

                <TextView
                    android:id="@+id/generalstore_custom_storeid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="HPF12345"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/DP15" />
            </LinearLayout>

            <TextView
                android:id="@+id/generalstore_custom_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/DP3"
                android:singleLine="true"
                android:text="dfpldskgpfsdlfg"
                android:textColor="@color/black1"
                android:textSize="@dimen/DP12" />

            <TextView
                android:id="@+id/generalstore_custom_storetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/DP3"
                android:singleLine="true"
                android:text="sdfdsfsdfsdf"
                android:textColor="@color/black1"
                android:textSize="@dimen/DP12" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/generalstore_custom_dividerline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP2"
        android:layout_marginLeft="@dimen/DP30"
        android:layout_marginRight="@dimen/DP30"
        android:background="@drawable/line" />

</LinearLayout>