<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Text_color1"
    android:id="@+id/rel_forgot">

    <RelativeLayout
        android:id="@+id/rel_header_forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/DP10"

        >

        <ImageView
            android:id="@+id/backimage_in_forgotpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow"
            android:paddingLeft="@dimen/DP10"
            android:paddingRight="@dimen/DP5"
            android:clickable="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/forgotpwd_skipfornow_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Skip for Now"
            android:textSize="@dimen/SP12"
            android:clickable="true"
            android:textColor="@color/header_txt_color"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/DP15"
            android:paddingLeft="@dimen/DP5"
            android:visibility="gone" />

    </RelativeLayout>


    <TextView
        android:id="@+id/forgotpwd_forgotpassword_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:textSize="@dimen/SP15"
        android:textColor="@color/header_txt_color"
        android:padding="@dimen/DP10"
        android:layout_below="@+id/rel_header_forgot"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/DP40" />

    <RelativeLayout
        android:id="@+id/rel_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/txt_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter your Email Id"
            android:textColor="@color/header_txt_color"
            android:textSize="@dimen/SP12"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/forgotpwd_emailaddress_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_center"
            android:drawableLeft="@drawable/mail"
            android:layout_marginTop="@dimen/DP30"
            android:layout_marginLeft="@dimen/DP35"
            android:layout_marginRight="@dimen/DP35"
            android:hint="Email address"
            android:textSize="@dimen/SP12"
            android:textCursorDrawable="@color/black"
            android:backgroundTint="@color/black"
            android:textColor="@color/etxt_color"
            android:textColorHint="@color/etxt_color"
            android:drawablePadding="@dimen/DP15"
            android:paddingRight="@dimen/DP10"
            android:paddingTop="@dimen/DP5"
            android:paddingBottom="@dimen/DP5"
            android:background="@android:color/transparent" />

        <View
            android:id="@+id/view_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP3"
            android:layout_below="@+id/forgotpwd_emailaddress_text"
            android:layout_marginLeft="@dimen/DP35"
            android:layout_marginRight="@dimen/DP35"
            android:background="@drawable/line" />

        <Button
            android:id="@+id/forgotpwd_submit_bton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_email"
            android:layout_marginTop="@dimen/DP40"
            android:background="@drawable/white_bar"
            android:layout_marginLeft="@dimen/DP35"
            android:layout_marginRight="@dimen/DP35"
            android:text="Sign Up"
            android:padding="@dimen/DP10"
            android:textSize="@dimen/SP15"
            android:textAllCaps="false"
            android:textColor="@color/bton_txt_color" />


    </RelativeLayout>
</RelativeLayout>
