<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_image"
        android:layout_width="@dimen/DP60"
        android:layout_height="@dimen/DP60"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/DP3"
        android:layout_marginLeft="@dimen/DP5"
        android:layout_marginRight="@dimen/DP5">

        <ImageView
            android:id="@+id/img_store"
            android:layout_width="@dimen/DP60"
            android:layout_height="@dimen/DP60"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/txt_init"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="K"
            android:background="@drawable/drawable_red_bg"
            android:textSize="@dimen/SP22"
            android:textColor="@color/white"
            android:visibility="gone" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/DP10"
        android:layout_toRightOf="@+id/rl_image"
        android:paddingBottom="@dimen/DP10"
        android:paddingTop="@dimen/DP10">

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="DAghfJAGkjljKLSJkhkjbhdjkshjkas"
                android:textColor="@color/blue"
                android:textSize="@dimen/SP14" />

            <TextView
                android:id="@+id/txt_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:drawableLeft="@drawable/line_up"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="DAghfJAGkjljKLSJkhkjbhdjkshjkas"
                android:textColor="@color/blue"
                android:textSize="@dimen/SP14" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_name">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_add_store"
                android:layout_alignParentLeft="true">

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/DP2"
                    android:singleLine="true"
                    android:text="gfhgfh"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/SP14" />

                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_address"
                    android:layout_marginTop="@dimen/DP2"
                    android:singleLine="true"
                    android:text="gfhgffnhfnhh"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/SP14"
                    android:visibility="invisible" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/img_add_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add"
                android:backgroundTint="@color/blue"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/lline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP2"
        android:layout_alignBottom="@+id/rl_data"
        android:layout_alignLeft="@+id/rl_data"
        android:layout_alignRight="@+id/rl_data"
        android:background="@drawable/line1" />

</RelativeLayout>
