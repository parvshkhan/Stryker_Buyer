<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <!--
            <RelativeLayout
                android:id="@+id/rl_counter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#88000000"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/txt_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/SP70" />
            </RelativeLayout>-->


        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_new"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/ll_login" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <TextView
                    android:id="@+id/txt_skip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/DP15"
                    android:layout_marginTop="@dimen/DP10"
                    android:drawableLeft="@drawable/skip_icon"
                    android:drawablePadding="@dimen/DP5"
                    android:padding="@dimen/DP5"
                    android:text="Skip for Now"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/SP15"
                    android:visibility="gone" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP60"
                android:paddingLeft="@dimen/DP50"
                android:paddingRight="@dimen/DP50">

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/DP15"
                    android:gravity="center_vertical|left"
                    android:hint="Email/Mobile No"
                    android:inputType="textEmailAddress"
                    android:paddingRight="@dimen/DP10"
                    android:paddingTop="@dimen/DP5"
                    android:textCursorDrawable="@color/black"
                    android:backgroundTint="@color/black"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/Signup"
                    android:textColorHint="@color/txt"
                    android:textSize="@dimen/SP16"
                    android:paddingLeft="@dimen/DP10" />


                <ImageView
                    android:id="@+id/img_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_email"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/line"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DP20"
                android:paddingLeft="@dimen/DP50"
                android:paddingRight="@dimen/DP50">

                <EditText
                    android:id="@+id/edt_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/DP15"
                    android:gravity="center_vertical|left"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@color/black"
                    android:paddingRight="@dimen/DP10"
                    android:paddingTop="@dimen/DP5"
                    android:singleLine="true"
                    android:backgroundTint="@color/black"
                    android:text=""
                    android:textColor="@color/Signup"
                    android:textColorHint="@color/txt"
                    android:textSize="@dimen/SP16"
                    android:paddingLeft="@dimen/DP10" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_pass"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/line"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_show_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/password_icon"
                    android:layout_marginRight="@dimen/DP10" />

            </RelativeLayout>

            <Button
                android:id="@+id/btn_signIn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DP40"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/DP50"
                android:layout_marginRight="@dimen/DP50"
                android:layout_marginTop="@dimen/DP25"
                android:background="@drawable/sign_up"
                android:text="SIGN IN"
                android:textColor="@color/white"
                android:textSize="@dimen/SP20" />

            <Button
                android:id="@+id/btn_fb_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/DP50"
                android:layout_marginRight="@dimen/DP50"
                android:layout_marginTop="@dimen/DP10"
                android:background="@drawable/fb"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_G_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/DP50"
                android:layout_marginRight="@dimen/DP50"
                android:layout_marginTop="@dimen/DP10"
                android:background="@drawable/gplus_02"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_bottom_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DP50"
                android:layout_marginRight="@dimen/DP50"
                android:layout_marginTop="@dimen/DP10">

                <TextView
                    android:id="@+id/txt_forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:clickable="true"
                    android:drawablePadding="@dimen/DP5"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/DP10"
                    android:paddingRight="@dimen/DP10"
                    android:text="Forgot Password?"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/SP12"
                    android:padding="@dimen/DP5" />

                <TextView
                    android:id="@+id/txt_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/DP10"
                    android:clickable="true"
                    android:drawablePadding="@dimen/DP5"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/DP10"
                    android:text="New to Market? Sign up"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/SP12"
                    android:padding="@dimen/DP5" />


                <TextView
                    android:id="@+id/txt_business_registration"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DP40"
                    android:layout_below="@+id/txt_sign_up"
                    android:background="@drawable/business"
                    android:layout_marginTop="@dimen/DP30"
                    android:text="BUSINESS REGISTRATION"
                    android:textColor="@color/white"
                    android:textSize="@dimen/SP15"
                    android:gravity="center" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
