<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_productdetails_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/productdetails_header_backimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/DP10"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/productdetails_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/DP5"
                android:text="Product Detail"
                android:textColor="@color/white1"
                android:textSize="@dimen/SP17" />

            <ImageView
                android:id="@+id/productdetails_header_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/DP10"
                android:src="@drawable/settings" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/productdetails_productimage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP200"
            android:src="@drawable/oplaceholder" />

        <RelativeLayout
            android:id="@+id/rel_productdetails_productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_grey">

            <LinearLayout
                android:id="@+id/ln_productdetails_productinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productdetails_productname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Italian Bread"
                    android:textColor="@color/orange1"
                    android:textSize="@dimen/DP15" />

                <TextView
                    android:id="@+id/productdetails_producttype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breads"
                    android:textColor="@color/orange1"
                    android:textSize="@dimen/DP15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/productdetails_rs_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/DP1"
                    android:src="@drawable/rs" />

                <TextView
                    android:id="@+id/productdetails_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/DP20"
                    android:text="230"
                    android:textSize="@dimen/SP15"
                    android:textColor="@color/orange1" />
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:id="@+id/productdetails_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productdetails_aboutproduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/DP15"
                    android:paddingLeft="@dimen/DP15"
                    android:paddingRight="@dimen/DP15"
                    android:paddingTop="@dimen/DP20"
                    android:text="asfdsansofifnaifnaoifodgsdgsdgsdgsdgdgdgdgdgdgdgdgdgdgdgdgdsgdsgdsgdgdgdgdgdgdgdgdgdgdgdgdgdgdgdgdsgdgdgdgdgdgdsgsdgsdgsdgdsgdsgdgsdgsgsgsdggdgdifsajfioswfwsoiwfrwgijgisegjesiogmsoigm"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/SP16" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_productdetails_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/DP40">

        <Button
            android:id="@+id/productdetails_addimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/add_product_detail"
            android:paddingRight="@dimen/DP10" />

        <RelativeLayout
            android:id="@+id/rl_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_base"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/DP5"
            android:layout_marginRight="@dimen/DP5">

            <TextView
                android:id="@+id/txt_nmbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DP36"
                android:layout_marginTop="@dimen/DP20"
                android:text=""
                android:textSize="@dimen/SP10" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/productdetails_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP40"
        android:layout_alignParentBottom="true"
        android:background="@drawable/base_black">

        <TextView
            android:id="@+id/productdetails_total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/DP20"
            android:text="Total"
            android:textColor="@color/white"
            android:textSize="@dimen/DP17" />

        <TextView
            android:id="@+id/productdetails_totalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/productdetails_total_text"
            android:paddingLeft="@dimen/DP10"
            android:text="Rs 340"
            android:textColor="@color/white"
            android:textSize="@dimen/SP17" />

        <ImageView
            android:id="@+id/productdetails_gonextimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/DP5"
            android:paddingTop="@dimen/DP5"
            android:src="@drawable/right_white" />

        <TextView
            android:id="@+id/productdetais_checkout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DP50"
            android:text="Checkout"
            android:textColor="@color/white1"
            android:textSize="@dimen/SP17" />
    </RelativeLayout>

</RelativeLayout>