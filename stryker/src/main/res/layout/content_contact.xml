<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_contact"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/app_color">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHARE CONTACTS"
            android:textSize="@dimen/SP15"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingRight="@dimen/DP70" />

    </android.support.v7.widget.Toolbar>


    <FrameLayout
        android:id="@+id/fram"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp"
            android:layout_marginLeft="@dimen/DP5"
            android:layout_marginRight="@dimen/DP5"
            android:layout_below="@id/card_view1"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/DP5"
            android:layout_marginBottom="@dimen/DP5"
            card_view:cardBackgroundColor="@color/black_trans">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Total Contacts :"
                    android:gravity="fill_horizontal"
                    android:textSize="@dimen/SP14"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/numbercontact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="end"
                    android:textSize="@dimen/SP14"
                    android:layout_gravity="right"
                    android:textColor="@color/black"
                    android:layout_weight="1" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </FrameLayout>


    <LinearLayout
        android:layout_below="@id/fram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/DP4"
        android:layout_weight="1">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/pull_to"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9">

            <ListView
                android:id="@+id/listcontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="@dimen/SP20" />
        </android.support.v4.widget.SwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/invite"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/red"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_weight="0.1"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="INVITE"
                android:theme="@style/MyButton"
                android:textColor="@color/white"
                android:layout_weight="0.95"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/SP15" />

            <TextView
                android:id="@+id/count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:layout_weight="0.05"
                android:textSize="@dimen/SP20"

                />


        </LinearLayout>

        <!--   <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:orientation="horizontal"
               android:background="@color/red"

               >
               <Button
                   android:id="@+id/invite"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Invite Contacts"
                   android:theme="@style/MyButton"
                   android:textColor="@color/white"
                   />

               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="0"
                   android:theme="@style/MyButton"
                   android:textColor="@color/white"

                   />
           </LinearLayout>-->

    </LinearLayout>


</LinearLayout>
